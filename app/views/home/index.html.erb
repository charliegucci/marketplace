<%# Search Bar %>
<br />
<div>
    <%= form_tag(root_path, method: :get) do%>
  <div class="section">
    <div class="box">
      <div class="field has-addons">
        <div class="control is-expanded">
          <%= text_field_tag(:search, params[:search],placeholder: "» search dogs here «", class: "input has-text-centered")%>
        </div>
        <div class="control">
          <%= submit_tag ('Search...'), class:"button is-info"%>
        </div>
      </div>
    <%end%>
    </div>
    <% @listings.each do |listing|%>
    <p><%= link_to listing.breed.name, listing_path(listing), class:"tag is-info"%><span class="icon has-text-success">
        <i class="fas fa-check-square"></i>
    </p>
    <%end%>
  </div>
</div>

<%= render '/shared/tiles'%>