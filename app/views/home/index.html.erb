<%= render '/shared/hero'%>
<br/>
<div class="container" style='text-align: center; padding: 3rem;'>
<h2 class="subtitle is-5 is-spaced ">Planning on getting a <strong>puppy</strong>?</h2> 
<h2 class="subtitle is-5 is-spaced ">If you have already settled on a breed, 
the next big decision is where you should get your <strong>puppy</strong> from. </h2>
</div>
<%# Search Bar %>
<br />
<div class="container" style=" width: 50%">
  <%= form_tag(root_path, method: :get) do%>
  <div class="section">
    <div class="box">
      <div class="field has-addons">
        <div class="control is-expanded">
          <%= text_field_tag(:search, params[:search],placeholder: "» search dogs here «", class: "input has-text-centered")%>
        </div>
        <div class="control">
          <%= submit_tag ('Search...'), class:"button is-info"%>
        </div>
      </div>
      <%end%>
    </div>
  </div>
</div>
<%# end Seacrch Bar %>
<%= render '/shared/card'%>
<br/>
<section class="section">
 <div class='container'>
<h1 class="title">Available</h1>
<h2 class="subtitle">Listings</h2>
</div>
<br/>
  <div class=container-home>
    <% @listings.each do |listing|%>
    <div class="card">
    <div class="card-content" style='font-size: small; '>
    <%= time_ago_in_words(listing.created_at) %><span> ago</span>
    </div>
      <div class="card-image">
        <figure class="image is-4by3">
          <% if listing.picture.attached? %>
          <%= link_to listing_path(listing.id) do %>
          <%= image_tag listing.picture%>
          <%end%>
          <% else %>
          <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
          <% end %>
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-48x48">
              <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4"><%= link_to listing.breed.name, listing_path(id: listing.id)%></p>
            <p class="title is-4"><%= listing.breeder_prefix%></p>
            <p class="subtitle is-6"><%= listing.user.name%></p>
            <p class="subtitle is-6">Price: Contact Seller</p>
          </div>
        </div>
        <div class="content">
          <%= listing.description%>...
        </div>
      </div>
    </div>
    <%end%>
  </div>
</section>
