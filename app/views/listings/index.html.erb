<div class=container>
  <div class="listing-container">
    <% @listings.each do |listing| %>
      <div class="card">
        <div class="card-image">
            <figure class="image is-256x256">
                <% if listing.picture.attached? %>
                  <%= image_tag listing.picture %>
                <% else %>
                  <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                <% end %>                
            </figure>
        </div>
        <div class="card-header-title is-centered">
          <p class="title is-5"><%= link_to listing.breed.name, listing_path(id: listing.id) %></p>
        </div>
        <div class="card-content">
          <p class="subtitle is-6"><%= listing.breeder_prefix %></p>
          <div class="content">
            <p class="subtitle is-7"> <%= listing.description %> </p>
            <br/>
            <br/>
          </div>
            <footer class="card-footer">
                <p class="card-footer-item"><span><%= link_to "Edit  ", edit_listing_path(id: listing.id) %> 
                <a class="icon is-small "> <i class="far fa-edit"> </i></a></span></p>
                <p class="card-footer-item"><span><%= link_to "Delete ",listing_path(listing),data: { confirm: 'Are you sure?' }, 
                method: :delete %><a class="icon is-small "><i class="fas fa-times"> </i></a></span></p>
            </footer>
        </div>
      </div>
    <% end %>
  </div>  
</div>
<br/>
<div class='container'>
    <button class="button is-success is-small">
      <span class="icon is-small">
        <i class="fas fa-bone"></i>
      </span>
      <span><%= link_to "Post new Listing", new_listing_path %></span>
    </button>  
</div>