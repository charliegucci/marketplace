<%=render '/shared/navbar'%>
<section class="section">
  <div class="listing-container">
    <% @listings.each do |listing| %>
      <div class="card">
        <div class="card-image">
            <figure class="image is-3by3">
                <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
            </figure>
        </div>
        <div class="card-header-title is-centered">
          <p class="title is-5"><%= listing.breed.name %></p>
        </div>
          <p class="subtitle is-6"><%= listing.breeder_prefix %></p>
        <div class="content">
          <p class="subtitle is-7"> <%= listing.description %> </p>
          <br/>
          <br/>
        <center><button class="button is-success is-small">
            <span class="icon is-small">
            <i class="far fa-edit"></i>
            </span>
            <span><%= link_to "Edit", edit_listing_path(id: listing.id) %></span>
        </button>
        <button class="button is-danger is-small is-outlined ">
            <span class="icon is-small">
            <i class="fas fa-times"></i>
            </span>
            <span><%= link_to "Delete",listing_path(listing), method: :delete %></span>
        </button></center>
          
          
        </div>
      </div>
    <% end %>
  </div>  
</section>
<br/>
<button class="button is-success is-small">
            <span class="icon is-small">
            <i class="fas fa-bone"></i>
            </span>
            <span><%= link_to "Post new Listing", new_listing_path %></span>
        </button>

