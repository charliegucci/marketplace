<%# Search Bar %>
<br />
<div class="container" style=" width: 50%;">
  <%= form_tag("#{home_path+'#main'}", method: :get, id: 'search-bar') do%>
  <div class="section">
    <div class="box">
      <div class="field has-addons">
        <div class="control is-expanded">
          <%= text_field_tag(:search, params[:search],placeholder: "» search dogs here «", class: "input has-text-centered")%>
        </div>
        <div class="control">
          <%= submit_tag ('Search...'), class:"button is-info"%>
        </div>
      </div>
      <%end%>
    </div>
  </div>
</div>
<%# end Seacrch Bar %>